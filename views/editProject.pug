extends ./layout/main

block contenido
  .contenido-principal
    h1= title

    if errors
      each error in errors
        .alerta.error= error.texto

    form.agregar-proyecto(action=`/project/${projectOne.id}` method="POST")
        .campo
          label(for="name") Nombre Proyecto:
          input(type="text" id="name" name="nameProject" placeholder="Nombre Proyecto" value= projectOne.nameProject)
        .campo-enviar
          input(type="submit" value="Guardar" class="boton")