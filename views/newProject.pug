extends ./layout/main

block contenido
  .contenido-principal
    h1= title

    if errors
      each error in errors
        .alerta.error= error

    form.agregar-proyecto(action=`/project/newProject` method="POST")
        .campo
          label(for="name") Nombre Proyecto:
          input(type="text" id="name" name="nameProject" placeholder="Nombre Proyecto")
        .campo-enviar
          input(type="submit" value="Crear" class="boton")  